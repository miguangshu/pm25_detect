<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false" >

    <SurfaceView
        android:id="@+id/surfaceview_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="120dp"
        android:text="天空部分"
        android:textSize="25sp"
        android:textColor="#ff000000"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/mask_skyphoto">


    </FrameLayout>

    <FrameLayout
        android:id="@+id/bg_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <TextView
            android:id="@+id/count_textView"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="90dp"
        android:text="非天空部分"
        android:textSize="25sp"
        android:textColor="#ffffffff"/>


    <!--<ImageView-->
        <!--android:id="@+id/count_imageview"-->
        <!--android:layout_gravity="center_vertical|left"-->
        <!--android:src="@drawable/white1"-->
        <!--android:layout_marginTop="120dp"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="80dp"/>-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom|center_horizontal">



        <Button
            android:id="@+id/button_takephoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/take_photo"
             />
        <Button
            android:id="@+id/button_ok"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:background="@drawable/button_circle_ok"/>
        <Button
            android:id="@+id/button_cancle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:alpha="0.5"
            android:background="@drawable/close2"/>
        <TextView
            android:id="@+id/button_chongpai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:text="重拍"
            android:visibility="invisible"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <!--<Button
            android:id="@+id/button_chongpai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:alpha="0.5"
            android:background="@drawable/close3"
            android:scaleType="fitXY"/>-->
    </RelativeLayout>
</FrameLayout>